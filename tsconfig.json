{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2020",
    "module": "ES6",
    "moduleResolution": "Node16",
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "~/*" : ["src/*"],
      "~path/*" : ["src/path/*"]
    }
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "__mocks__/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
